{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "NodeNext",
    "lib": ["dom", "es2021"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "types": [
      "@webgpu/types",
      "@types/node"
    ],
    "outDir": ".erb/dll"
  },
  "exclude": [
    "test",
    "release/build",
    "release/app/dist",
    ".erb/dll",
    "node_modules/@aws-amplify",
    "node_modules/@patternfly",
  ],
  "include": [
    "**/*",
    ".erb/configs/**/*.ts",
    ".erb/scripts/**/*.ts",
    ".erb/scripts/**/*.js",
    ".erb/mocks/**/*.js",
  ]
}
